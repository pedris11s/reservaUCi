{% extends 'base.html.twig' %}

{% block content %}
    <section id="main-content">
      <section class="wrapper">
        <!--overview start-->
        <div class="row">
          <div class="col-lg-12">
            <h3 class="page-header">{% block header %} {% endblock %} </h3>
            <ol class="breadcrumb">
                <li><a href=""><i class="fa fa-home"></i> Inicio</a></li>
                {% block  miga %}
                
                {% endblock %}
            </ol>
          </div>
        </div>

      
    <div class="container">
      <div class="row">
        <a class="btn btn-primary" href='{% block url_add %} {% endblock %}'><i class="icon_plus"></i> Adicionar</a>
      </div>
    </div>
    <br>    

    <div class="row">
          <div class="col-lg-12">
            <section class="panel">
              <header class="panel-heading">
                {% block table_name%}
                {% endblock %}
              </header>
              <input class="form-control" type="text" id="filtrar" placeholder="Buscar" />
              <table class="table table-striped table-advance table-hover">
                    {% block table %}
                
                    {% endblock%}
              </table>
            </section>
          </div>
        </div>
{% endblock %}